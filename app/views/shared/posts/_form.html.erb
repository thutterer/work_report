<% if @post.errors.any? %>
<ul>
  <% @post.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for [@post], role: "form" do |f| %>

<%= f.hidden_field :title, :autofocus => true, class: "form-control monospaced-control", placeholder: "Title (also used for URL slug)..." %>

<div class="form-group">
  <%= f.label :workday, "Day" %>
  <div class='input-group date' id='workday_picker'>
    <input type='text' class="form-control" name='post[workday]' value='<%= if defined? @post.workday.strftime then @post.workday.strftime("%Y-%m-%d") else '' end %>>' />
    <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
    </span>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#workday_picker').datetimepicker({
              format: 'YYYY-MM-DD'
          });
      });
  </script>
</div>

<div class="form-group">
  <%= f.label :content_md, "Content" %>
  <div class="row">
    <div class="col-xs-12">
      <%= f.text_area :content_md, rows: 15, class: "form-control monospaced-control", placeholder: "Post content (Markdown format)..." %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-xs-12">
      <%= f.check_box :draft %> <%= f.label :draft, "draft" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 padded">
    <button class='btn btn-primary'>
      <i class='fa fa-plus-square'></i> Publish
    </button> - <%= link_to "Cancel", posts_dashboard_path %>
  </div>
</div>

<% end %>
