<table class="table table-hover table-striped" id="tableMonth">
  <thead>
  <tr>
    <th>Date</th>
    <th>Weekday</th>
    <th>From</th>
    <th>Until</th>
    <th>Duration</th>
    <th>Note</th>
  </tr>
  </thead>
  <tbody>
  <% @days.each do |day| %>
      <% if workday = @workdays.where(workday: day).first %>
          <tr>
            <td><%= link_to workday.title, edit_report_path(workday.slug) %></td>
            <td><%= workday.workday.strftime('%A') %></td>
            <td><%= workday.worked_from %></td>
            <td><%= workday.worked_until %></td>
            <td><%= Time.at(workday.worked_seconds).utc.strftime("%H:%M:%S") %></td>
            <td><%= workday.note %></td>
          </tr>
      <% else %>
          <tr>
            <td><%= day %></td>
            <td><%= Date.parse(day).strftime('%A') %></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
