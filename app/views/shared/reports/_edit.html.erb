<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Add a new report</h3>
    </div>
    <div class="modal-body">
      <%= render 'shared/reports/form' %>
      <hr/>
    </div>
    <div class="modal-footer">
      <%= link_to "<i class='fa fa-minus-square'></i> Delete report".html_safe, report_path(@report), method: :delete, data:{confirm: "Are you sure?"}, class: "btn btn-small btn-danger" %>
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button id="modal-form-submit" class="btn btn-primary">Save changes</button>
    </div>
  </div>
</div>

<script>
    $('#modal-form-submit').on('click', function(e){
        $('#edit_report_<%= @report.id %>').submit();
    });
</script>