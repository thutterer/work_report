<% title("#{@year}-#{@month}") %>
<h3 class="page-title">Reports</h3>
<hr/>

<%= form_tag("/reports/index", method: "post", id: "monthForm", remote: "true") do %>
    <div class="hidden-print" style="overflow:hidden;">
      <div class="form-group">
        <div class="row">
          <div class="col-md-12">
            <div id="monthpicker">
              <input type="hidden" name="monthYear" value="">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12" align="right">
            <input type="checkbox" name="toggleView" id="toggleView" checked data-on-text="Month" data-off-text="Weeks" data-on-color="default" data-off-color="default">
          </div>
        </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#monthpicker').datetimepicker({
                  inline: true,
                  format: 'MMMM YYYY'
              });
          });
      </script>
    </div>
<% end %>


<%= render 'shared/reports/monthTable' %>

<div id="divWeeks" style="display: none;">
  <%= render 'shared/reports/weekTables' %>
</div>