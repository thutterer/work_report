<% @weeks.each do |week, days| %>
  <div class="well">
      <h4>Week <%= week %></h4>
      <table class="table table-hover table-striped" class="tableWeek">
        <thead>
        <tr>
          <th width="10%">Day</th>
          <th>Report</th>
          <th width="10%">Duration</th>
        </tr>
        </thead>
        <tbody style="cursor: pointer;">
          <% days.each do |day| %>
            <% if (report = current_user.reports.where(workday: day).first) %>
              <tr data-link="<%= edit_report_path(report.id) %>">
                <td width="10%"><%= day %>
                  <br><%= report.workday.strftime('%A') %></td>
                <td><%= report.content_html.html_safe %></td>
                <td width="10%"><%= Time.at(report.worked_seconds).utc.strftime("%H:%M") unless report.worked_seconds == 0 %></td>
              </tr>
            <% else %>
              <tr data-link="<%= new_report_path(workday: day) %>">
                <td width="10%"><%= day %>
                  <br><%= Date.parse(day).strftime('%A') %></td>
                <td></td>
                <td width="10%"></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
  </div>
  <div class="page-break"></div>
<% end %>

